<h1><%= @event.title %></h1>

<div class="row">
  <div class="col-md-8">
    <h3>Date:</h3> 
    <%= @event.date %>
    <h3>Location:</h3> 
    <%= @event.location %>
    <h3>Guests
    <% if @event.guests.count > 0 %>
      <%= "(#{@event.guests.count})" %>
    <% else %>
      </h3>Nobody has RSVP'd :(<h3>
    <% end %>
    </h3>
  </div>
</div>

<%= render @event.guests %>

<br>
<br>
<br>
<br>

<div class="col-md-6">
  <%= link_to "Add a guest", new_user_event_guest_path(user_id: @event.user_id, event_id: @event), class: "btn btn-primary" %>
</div>
