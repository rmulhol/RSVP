<% provide(:title, "Edit Event") %>
<% content_for :javascript_includes do %>
  <%= javascript_include_tag "location_search.js" %>
  <%= javascript_include_tag "datetime_select.js" %>
<% end %>

<h1>Edit Your Event</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([@user, @event]) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label :date %>
      <%= f.text_field :date, id: "datetimepicker1",
          class: "form-control" %>

      <%= f.label :location %>
      <%= f.text_field :location, id: "locationSearchField",
          class: "form-control" %>

      <%= f.submit "Update my event", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
