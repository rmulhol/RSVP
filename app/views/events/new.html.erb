<%= provide(:title, "New Event") %>
<% content_for :javascript_includes do %>
  <%= javascript_include_tag "location_search.js" %>
  <%= javascript_include_tag "datetime_select.js" %>
<% end %>

<h1>Create an Event</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([:user, @event]) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label "Event Name" %>
      <%= f.text_field :title, class: "form-control", 
          placeholder: "Name your event" %>

      <%= f.label "Event Date/Time" %>
      <%= f.text_field :date, id: "datetimepicker1",
          class: "form-control" %>

      <%= f.label "Event Location" %>
      <%= f.text_field :location, id: "locationSearchField", 
          class: "form-control" %>

      <%= f.submit "Create my event!", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

